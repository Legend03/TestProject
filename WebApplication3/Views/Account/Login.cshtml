@model User?

@{
    <link rel="stylesheet" href="startPage/index.css" />
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" class="loginContainer">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div style="margin-top: 73px; margin-left: 135px; padding-bottom: 29px; font-size: 25px">Autorization</div>
    <div class="form-group">
        <label asp-for="Email" for="exampleInputEmail1">Email address</label>
        <input asp-for="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
    </div>
    <div class="form-group" style="margin-top: 10px">
        <label asp-for="Password" for="exampleInputPassword1">Password</label>
        <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
    </div>
    <button type="submit" class="btn btn-primary" style="margin-left:129px; margin-top: 46px; width: 140px; height: 34px;">Enter</button>
</form>
